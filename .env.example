# Environment
NODE_ENV=development

# Backend Server
PORT=3001
API_VERSION=v1

# Database
DATABASE_URL=postgresql://pickem:password@localhost:5432/nfl_pickem
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TTL_SECONDS=900

# JWT Secrets (Generate secure random strings in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# RSS Feed Sources
RSS_ESPN_URL=https://www.espn.com/espn/rss/nfl/news
RSS_CBS_URL=https://www.cbssports.com/rss/headlines/nfl/
RSS_FOX_URL=https://api.foxsports.com/v1/rss
RSS_POLL_INTERVAL=*/15 * * * *

# Features
ENABLE_RSS_POLLING=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_EMAIL_VERIFICATION=false

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=NFL Pick 'Em Challenge

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
