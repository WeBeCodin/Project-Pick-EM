{
  "name": "nfl-pickem-challenge",
  "version": "1.0.0",
  "private": true,
  "description": "Community NFL Pick 'Em Challenge - Free-to-play web application with Node.js backend, Next.js frontend, and shared types",
  "author": "WeBeCodin",
  "license": "MIT",
  "keywords": ["nfl", "pickem", "sports", "challenge", "monorepo", "typescript", "nextjs", "express", "postgresql", "redis"],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "build": "cd packages/frontend && npm install && npm install @prisma/client prisma && npx prisma generate && npm run build",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:migrate": "npm run db:migrate --workspace=packages/backend",
    "db:seed": "npm run db:seed --workspace=packages/backend",
    "db:studio": "npm run db:studio --workspace=packages/backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "e2e": "npx playwright test",
    "e2e:ui": "npx playwright test --ui",
    "e2e:debug": "npx playwright test --debug",
    "e2e:report": "npx playwright show-report",
    "typecheck": "npm run typecheck:backend && npm run typecheck:frontend",
    "typecheck:backend": "cd packages/backend && npx tsc --noEmit",
    "typecheck:frontend": "cd packages/frontend && npm run type-check",
    "typecheck:shared": "cd packages/shared && npx tsc --noEmit",
    "prisma:validate": "cd packages/backend && npx prisma validate",
    "prisma:status": "cd packages/backend && npx prisma migrate status",
    "prisma:generate": "cd packages/backend && npx prisma generate",
    "ci:quality-gates": "npm run typecheck && npm run prisma:validate && npm run lint",
    "postinstall": "husky install || true"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.5",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "postcss": "^8.5.6",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WeBeCodin/Project-Pick-EM.git"
  },
  "bugs": {
    "url": "https://github.com/WeBeCodin/Project-Pick-EM/issues"
  },
  "homepage": "https://github.com/WeBeCodin/Project-Pick-EM#readme"
}
