{
  "version": 2,
  "buildCommand": "cd packages/frontend && npm run build",
  "outputDirectory": "packages/frontend/.next",
  "framework": "nextjs",
  "installCommand": "npm install --prefix packages/frontend --legacy-peer-deps",
  "github": {
    "enabled": true,
    "autoAlias": true,
    "silent": false,
    "autoJobCancelation": true
  },
  "ignoreCommand": "git diff HEAD^ HEAD --quiet . || (git diff HEAD^ HEAD --name-only | grep -E '^(packages/frontend|docs)/' > /dev/null)",
  "redirects": [
    {
      "source": "/",
      "destination": "/dashboard",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
